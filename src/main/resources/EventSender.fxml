      <ListView fx:id="onlineFriendsListView" layoutX="45.0" layoutY="180.0" prefHeight="176.0" prefWidth="176.0" />
      <Label layoutX="45.0" layoutY="155.0" text="Friends Online:" />
      <ListView fx:id="sendFriendsListView" layoutX="367.0" layoutY="184.0" prefHeight="176.0" prefWidth="176.0" />
      <Label layoutX="367.0" layoutY="155.0" text="Send Message to:" />
      <Button fx:id="addToSendListButton" layoutX="259.0" layoutY="223.0" mnemonicParsing="false" onAction="#addToGroupList" prefHeight="25.0" prefWidth="62.0" text="-&gt;" />
      <Label fx:id="statusLabel" alignment="CENTER" layoutY="379.0" prefHeight="17.0" prefWidth="583.0" textAlignment="CENTER">
