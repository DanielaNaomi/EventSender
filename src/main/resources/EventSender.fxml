            <Font name="Arial Black" size="12.0" />
         </font></Label>
      <Button fx:id="removeFromSendListButton" layoutX="259.0" layoutY="297.0" mnemonicParsing="false" onAction="#removeFromGroupList" prefHeight="25.0" prefWidth="62.0" text="&lt;-" />
